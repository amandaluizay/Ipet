@using Ipet.MVC.Extensions
@model IEnumerable<Ipet.ViewModels.ProdutoViewModel>

@{
    ViewData["Title"] = "Produtos";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="mt-5">@ViewData["Title"]</h1>
        </div>
        <div class="col text-right">
            @if (User.Identity.IsAuthenticated && User.HasClaim("Usuario", "2"))
            {
                <div class="mb-3">
                    <a class="btn" asp-action="Create" style="color: rgb(153,106,151);">
                        <i class="fas fa-plus"></i> <span style="color: rgb(153,106,151);">Novo Produto</span>
                    </a>
                </div>
            }
        </div>
    </div>
    <hr />

    <div class="row">
        <div class="col">
            <partial name="_ListaProdutos" />
        </div>
    </div>
</div>
