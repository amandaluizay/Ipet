@using Ipet.MVC.Extensions
@using System.Security.Claims;
@model Ipet.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Detalhe do Produto - " + Model.Nome;
}

<h4 style="padding-top: 50px">@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <img src="data:@Model.Imagem" alt="@Model.Imagem" style="width: 300px; height: 300px" />
    </div>
    <div class="col-md-6">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.EstabelecimentoId)
            </dt>
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd>
                @Model.Valor.ToString("C")
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DataCadastro)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Ativo)
            </dd>
            <div>
                @if (User.Identity.IsAuthenticated && User.HasClaim("Usuario", "2"))
                {
                    if (Guid.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier)) == Model.EstabelecimentoId)
                    {
                        <a supress-by-claim-name="Produto" supress-by-claim-value="Editar" class="btn btn-info" asp-controller="Produtos" asp-action="Edit" asp-route-id="@Model.Id">
                            <span class="fa fa-pencil-alt"></span> Editar
                        </a>
                    }
                }

                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </div>
        </dl>


    </div>
</div>