@using Ipet.MVC.Extensions
@model Ipet.ViewModels.PerfilPetViewModel

@{
    ViewData["Title"] = "Perfil Pet";
}

<div class="container">
    @if (Model != null)
    {
        <h2>Detalhes do Perfil do Pet</h2>
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TipoAnimal)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TipoAnimal)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Raca)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Raca)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Idade)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Idade)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Porte)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Porte)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Observacao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Observacao)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Ativo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Ativo)
                </dd>
            </dl>

            @Html.Partial("_DeleteButton", Model)


        </div>
    }
    else
    {
        <h2>Criar um novo perfil de pet</h2>
        <a asp-action="Create" class="btn btn-primary">Criar</a>
    }
</div>
