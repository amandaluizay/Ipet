    $(document).ready(function () {
        var tipoAnimalDropdown = $('#TipoAnimal');
        var racaDropdown = $('#Raca');

        tipoAnimalDropdown.on('change', function () {
            var selectedTipo = $(this).val();
            racaDropdown.empty();
            if (selectedTipo) {
                var racas = racasPorTipo[selectedTipo];
                if (racas) {
                    $.each(racas, function (index, value) {
                        racaDropdown.append($('<option>').text(value).val(value));
                    });
                } else {
                    racaDropdown.append($('<option>').text('Selecione um tipo de animal disponivel'));
                }
                racaDropdown.prop('disabled', false);
            } else {
                racaDropdown.append($('<option>').text('Selecione o tipo de animal primeiro'));
                racaDropdown.prop('disabled', true);
            }
        });
    });
