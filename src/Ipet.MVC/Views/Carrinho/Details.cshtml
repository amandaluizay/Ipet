@page
@model IEnumerable<Ipet.ViewModels.CarrinhoProdutoViewModel>

@using EnterpriseStore.Extensions

@{
    ViewData["Title"] = "AlterarQuantidade";
}


<h1>Editar Quantidade de Produto</h1>

<form method="post">
    <label for="quantidade">Quantidade:</label>
    <input type="number" id="quantidade" name="quantidade" value="@Model.Quantidade" required>

    <button type="submit">Salvar Quantidade</button>
</form>