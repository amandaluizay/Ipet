        @if (Model.Produtos != null)
        {
            var x = 0;
            foreach (var carrinhoProduto in Model.Produtos)
            {
                <li class="list-group-item d-flex justify-content-between lh-sm">
                    <div>
                        <h6 class="my-0">@carrinhoProduto.Produto.Nome</h6>
